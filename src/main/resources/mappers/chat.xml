<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demoproject.repository.ChatRepository">
    <insert id="insert" parameterType="com.example.demoproject.common.webSocket.domain.ChatRoomDto">
        insert into demo_project.tb_chat_room
        values (#{roomId},
                #{name},
                #{createBy},
                #{registDateTime})
    </insert>

    <select id="findAll" resultType="com.example.demoproject.common.webSocket.domain.ChatRoomDto">
        select roomId, name, createBy, registDateTime
        from demo_project.tb_chat_room
        order by registDateTime desc
    </select>
    <select id="findById" resultType="com.example.demoproject.common.webSocket.domain.ChatRoomDto">
        select *
        from demo_project.tb_chat_room
        where roomId = #{roomId}
    </select>
</mapper>